<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Adharnumber:</strong>
  <%= @user.adharnumber %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @user.birthdate %>
</p>

<p>
  <strong>Father name:</strong>
  <%= @user.father.name if @user.father %>
</p>

<p>
  <strong>Mother name:</strong>
  <%= @user.mother.name if @user.mother %>
</p>

<p>
  <strong>Step father name:</strong>
  <%= @user.step_father.name if @user.step_father %>
</p>

<p>
  <strong>Step mother name:</strong>
  <%= @user.step_mother.name if @user.step_mother %>
</p>


<p>
  <strong>Children name:</strong>

  <% if @user.gender == "male" %>
    <%= @user.child_of_father.name if @user.child_of_father %>
  <% else %>
    <%= @user.child_of_mother.name if @user.child_of_mother %>
  <% end %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>


<p>
  <strong>Children:</strong>
   <%= User.children(@user).map { |user| link_to user.name, user_path(user)}.join(",").html_safe  %>
</p>


<p>
  <strong>Step Children:</strong>
   <%= User.step_children(@user).map { |user| link_to user.name, user_path(user)}.join(",").html_safe  %>
</p>



<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
